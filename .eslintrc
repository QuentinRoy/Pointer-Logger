{
  "parser": "babel-eslint",
  "env": {
    "browser": true
  },
  "extends": "airbnb-base",
  "rules": {
    "comma-dangle": ["error", "never"],
    "arrow-parens": 0,
    "no-mixed-operators": 0
  },
  "settings": {
    "import/resolver": {
      "webpack": {
        "config": "webpack.common.js"
      }
    },
    "html/html-extensions": [".html", ".vue"]
  },
  "plugins": ["html"],
  "root": true
}
